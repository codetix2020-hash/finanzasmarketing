{
	"name": "supastarter-nextjs",
	"private": true,
	"scripts": {
		"db:push": "pnpm --filter @repo/database push",
		"db:generate": "pnpm --filter @repo/database generate",
		"build": "pnpm db:push && dotenv -c -- turbo build",
		"dev": "dotenv -c -- turbo dev --concurrency 15",
		"type-check": "dotenv -c -- turbo type-check",
		"typecheck": "turbo typecheck",
		"start": "dotenv -c -- turbo start",
		"lint": "biome lint .",
		"lint:fix": "biome lint --apply .",
		"check": "biome check",
		"clean": "turbo clean",
		"format": "biome format . --write",
		"analyze": "pnpm lint && pnpm typecheck",
		"postinstall": "pnpm db:generate"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "^25.0.9",
		"dotenv-cli": "^11.0.0",
		"turbo": "^2.7.5",
		"typescript": "5.9.3"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.2.2",
			"@types/react-dom": "19.2.2"
		},
		"onlyBuiltDependencies": [
			"@prisma/client",
			"@prisma/engines",
			"@swc/core",
			"prisma",
			"prisma-zod-generator",
			"sharp"
		]
	},
	"dependencies": {
		"@sentry/nextjs": "^10.29.0"
	}
}
