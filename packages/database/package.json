{
	"dependencies": {
		"@paralleldrive/cuid2": "^3.1.0",
		"@prisma/adapter-pg": "^6.19.0",
		"@prisma/client": "6.19.0",
		"@repo/config": "workspace:*",
		"decimal.js": "^10.6.0",
		"drizzle-orm": "^0.44.7",
		"drizzle-zod": "0.8.3",
		"pg": "^8.16.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.3",
		"@repo/tsconfig": "workspace:*",
		"@types/bcrypt": "^6.0.0",
		"@types/bcryptjs": "^3.0.0",
		"@types/node": "25.3.0",
		"bcrypt": "^6.0.0",
		"bcryptjs": "^3.0.3",
		"dotenv": "^17.3.1",
		"dotenv-cli": "^11.0.0",
		"drizzle-kit": "^0.31.9",
		"prisma": "7.4.1",
		"prisma-zod-generator": "^2.1.4",
		"tsx": "^4.20.6"
	},
	"main": "./index.ts",
	"name": "@repo/database",
	"scripts": {
		"generate": "prisma generate --no-hints --schema=./prisma/schema.prisma",
		"prepublishOnly": "pnpm run generate",
		"push": "dotenv -c -e ../../.env -- prisma db push --skip-generate --accept-data-loss --schema=./prisma/schema.prisma",
		"pull": "dotenv -c -e ../../.env -- prisma db pull --schema=./prisma/schema.prisma",
		"migrate": "dotenv -c -e ../../.env -- prisma migrate dev --schema=./prisma/schema.prisma",
		"studio": "dotenv -c -e ../../.env -- prisma studio --schema=./prisma/schema.prisma",
		"create-user": "dotenv -c -e ../../.env -- tsx scripts/create-user.ts",
		"create-user-direct": "dotenv -c -e ../../.env -- tsx scripts/create-user-direct.ts",
		"type-check": "tsc --noEmit"
	},
	"types": "./**/.tsx",
	"version": "0.0.0"
}
